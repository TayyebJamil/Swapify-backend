<main id="main" class="main">
  <div class="pagetitle">
    <h1>Users</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin/users">Home</a>
        </li>
        <li class="breadcrumb-item active">
          <a href="/admin/users">Users</a>
        </li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body" style="overflow: auto">
            <button class="btn btn-light mt-4" style="float: right">
              <a href="/admin/users/new">
                <i class="bi"></i><span>Add User</span>
              </a>
            </button>
            <h5 class="card-title">User List</h5>

            <% if (!resources || resources.data.length === 0) { %>
            <p>No users to display.</p>
            <% } else { %>
            <table class="table table-hover datatable">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">First Name</th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Gender</th>
                  <th scope="col">Created At</th>
                </tr>
              </thead>
              <tbody>
                <% for (const [index, user] of resources.data.entries()) { %>
                <tr
                  style="cursor: pointer"
                  class="clickable-row"
                  data-href="/admin/users/<%= user.id %>"
                >
                  <th scope="row">
                    <a href="/admin/users/<%= user.id %>"><%= index + 1 %></a>
                  </th>
                  <td class="text-capitalze">
                    <%= user?.attributes?.firstName %>
                  </td>
                  <td><%= user?.attributes?.lastName %></td>
                  <td><%= user?.attributes?.email %></td>
                  <td class="text-capitalze">
                    <%= user?.attributes?.gender %>
                  </td>

                  <td>
                    <%- include("TimeFormat/convertToLocalZone", { time:
                    user?.attributes?.createdAt }); %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
