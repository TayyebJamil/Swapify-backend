<main id="main" class="main">
  <div class="pagetitle">
    <h1>Profile</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin/users">Home</a>
        </li>
        <li class="breadcrumb-item">
          <a href="/admin/users">Users</a>
        </li>
        <li class="breadcrumb-item active">
          <a href="/admin/users/<%= resources.data?.id %>"
            ><%= resources.data?.attributes?.firstName %></a
          >
        </li>
      </ol>
    </nav>
  </div>
  <section class="section profile">
    <div class="row">
      <div class="col-xl-4">
        <div class="card">
          <div
            class="card-body profile-card pt-4 d-flex flex-column align-items-center"
          >
          <img src="<%= resources?.data?.attributes?.image ||  '/blank-profile-picture.png' %>" alt="Profile">

            <h2><%= resources?.data?.attributes?.firstName %></h2>
          </div>
        </div>
      </div>

      <div class="col-xl-8">
        <div class="card">
          <div class="card-body pt-3">
            <ul class="nav nav-tabs nav-tabs-bordered">
              <li class="nav-item">
                <button
                  class="nav-link active"
                  data-bs-toggle="tab"
                  data-bs-target="#profile-overview"
                >
                  Overview
                </button>
              </li>
              <li class="nav-item">
                <button
                  class="nav-link"
                  data-bs-toggle="tab"
                  data-bs-target="#profile-edit"
                >
                  Edit Profile
                </button>
              </li>
              <li class="nav-item">
                <button
                  class="nav-link"
                  data-bs-toggle="tab"
                  data-bs-target="#change-password"
                >
                  Change Password
                </button>
              </li>
              <li class="nav-item">
                <button
                  class="nav-link"
                  data-bs-toggle="tab"
                  data-bs-target="#serviceActions"
                >
                  Delete
                </button>
              </li>
            </ul>
            <div class="tab-content pt-2">
              <div
                class="tab-pane fade show active profile-overview"
                id="profile-overview"
              >
                <h5 class="card-title">Profile Details</h5>
                <div class="row">
                  <div class="col-lg-3 col-md-4 label">First Name</div>
                  <div class="col-lg-9 col-md-8 text-capitalze">
                    <%= resources?.data?.attributes?.firstName %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Last Name</div>
                  <div class="col-lg-9 col-md-8 text-capitalze">
                    <%= resources?.data?.attributes?.lastName %>
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Email</div>
                  <div class="col-lg-9 col-md-8">
                    <%= resources?.data?.attributes?.email %>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-3 col-md-4 label">Deleted</div>
                  <div class="col-lg-9 col-md-8 text-capitalze">
                    <% if (resources?.data?.attributes?.isDeleted === true) { %>
                    <span style="color: red"
                      ><%= resources?.data?.attributes?.isDeleted %></span
                    >
                    <% } else { %>
                    <span style="color: green"
                      ><%= resources?.data?.attributes?.isDeleted %></span
                    >
                    <% } %>
                  </div>
                </div>

                     <div class="row">
                  <div class="col-lg-3 col-md-4 label">AI Enabled</div>
                  <div class="col-lg-9 col-md-8 text-capitalze">
                    <% if (resources?.data?.attributes?.isAiEnabled !== true) { %>
                    <span style="color: red"
                      ><%= resources?.data?.attributes?.isAiEnabled %></span
                    >
                    <% } else { %>
                    <span style="color: green"
                      ><%= resources?.data?.attributes?.isAiEnabled %></span
                    >
                    <% } %>
                  </div>
                </div>


              </div>

              <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                <form
                  class="form"
                  method="POST"
                  action="/admin/users/<%-resources?.data?.id %>?_method=PUT"
                >
                  <div class="row mb-3">
                    <label
                      for="firstName"
                      class="col-md-4 col-lg-3 col-form-label"
                      >First Name</label
                    >
                    <div class="col-md-8 col-lg-9">
                      <input
                        required
                        name="firstName"
                        type="text"
                        class="form-control"
                        id="firstName"
                        value="<%= resources?.data?.attributes?.firstName %>"
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label
                      for="lastName"
                      class="col-md-4 col-lg-3 col-form-label"
                      >Last Name</label
                    >
                    <div class="col-md-8 col-lg-9">
                      <input
                        required
                        name="lastName"
                        type="text"
                        class="form-control"
                        id="lastName"
                        value="<%= resources?.data?.attributes?.lastName %>"
                      />
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label for="email" class="col-md-4 col-lg-3 col-form-label"
                      >Email</label
                    >
                    <div class="col-md-8 col-lg-9">
                      <input
                        required
                        name="email"
                        type="email"
                        class="form-control"
                        value="<%= resources?.data?.attributes?.email %>"
                      />
                    </div>
                  </div>



                         <div class="row mb-3">
                    <label class="col-md-4 col-lg-3 col-form-label"
                      >AI Enabled</label
                    >
                    <div class="col-md-8 col-lg-9">

                     <input
                    type="checkbox"
                    id="isAiEnabled"
                    name="isAiEnabled"
                    value="true"
                    <% if (resources?.data?.attributes?.isAiEnabled) { %>
                      checked
                    <% } %>
                  />
                  <label for="isDeleted">

                    </div>
                  </div>



                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                      Save Changes
                    </button>
                  </div>
                </form>
              </div>

              <div
                class="tab-pane fade change-password pt-3"
                id="change-password"
              >
                <form
                  class="form"
                  method="POST"
                  action="/admin/users/<%-resources.data.id %>?_method=patch"
                >
                  <div class="row mb-3">
                    <label
                      for="password"
                      class="col-md-4 col-lg-3 col-form-label"
                      >Password</label
                    >
                    <div class="col-md-8 col-lg-9 d-flex">
                      <input
                        required
                        name="password"
                        type="password"
                        class="form-control"
                        id="password"
                      />
                      <i
                        id="checkbox"
                        style="
                          margin-left: -30px;
                          margin-top: 8px;
                          cursor: pointer;
                        "
                      ></i>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label
                      for="confirmPassword"
                      class="col-md-4 col-lg-3 col-form-label"
                      >confirmPassword</label
                    >
                    <div class="col-md-8 col-lg-9 d-flex">
                      <input
                        required
                        name="confirmPassword"
                        type="password"
                        class="form-control"
                        id="confirmPassword"
                      />
                      <i
                        id="confirm_checkbox"
                        style="
                          margin-left: -30px;
                          margin-top: 8px;
                          cursor: pointer;
                        "
                      ></i>
                    </div>
                  </div>
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                      Save Changes
                    </button>
                  </div>
                </form>
              </div>

              <div class="tab-pane fade pt-3" id="serviceActions">
                <form
                  class="form"
                  method="POST"
                  action="/admin/users/<%-resources?.data?.id %>/block?_method=patch"
                >
                  <input
                    type="checkbox"
                    id="isCommunityBlocked"
                    name="isCommunityBlocked"
                    value="true"
                    <% if (resources?.data?.attributes?.isDeleted === true) { %>
                      checked
                    <% } %>
                  />
                  <label for="isDeleted">

                    <% if (resources?.data?.attributes?.isDeleted===true) { %>
                      <span style="color: red"
                        > User Deleted
                      </span>
                      <% } else { %>
                      <span
                        >Delete User
                      </span>
                      <% } %>
                  </label><br />

                  <br />
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
