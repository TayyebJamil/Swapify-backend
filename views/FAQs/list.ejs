<main id="main" class="main">
  <div class="pagetitle">
    <h1>Faqs</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin/users">Home</a>
        </li>
        <li class="breadcrumb-item active">
          <a href="/admin/faqs">FAQs</a>
        </li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body" style="overflow: auto">
            <button class="btn btn-light mt-4" style="float: right">
              <a href="/admin/faqs/new">
                <i class="bi"></i><span>Add FAQ</span>
              </a>
            </button>
            <h5 class="card-title">FAQs List</h5>

            <% if (!resources || resources?.length === 0 ||
            resources?.data?.length === 0) { %>
            <p>No faqs to display.</p>
            <% } else { %>
            <table class="table table-hover datatable">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Question</th>
                  <th scope="col">Published</th>
                  <th scope="col">Created At</th>
                </tr>
              </thead>
              <tbody>
                <% for (const [index, faq] of resources?.entries()) { %>
                <tr
                  style="cursor: pointer"
                  class="clickable-row"
                  data-href="/admin/faqs/<%= faq.id %>"
                >
                  <th scope="row">
                    <a href="/admin/faqs/<%= faq.id %>"><%= index + 1 %></a>
                  </th>
                  <td class="text-capitalze"><%= faq?.question %></td>
                  <td><%= faq?.published %></td>
                  <td>
                    <%- include("TimeFormat/convertToLocalZone", { time:
                    faq?.createdAt }); %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script>
  console.log(' -----  ---- ', JSON.parse(`<%-JSON.stringify(resources)%>`))
</script>
