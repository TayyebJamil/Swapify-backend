<div class="row mb-3">
  <div class="col-md-8 col-lg-4">
    <span>
      <% if (deleted) { %>
      <span style="color: red">This Record is deleted</span>
      <% } else { %>
      <span style="color: green">This Record is not deleted</span>
      <% } %>
    </span>
  </div>

  <div class="col-md-4 col-lg-3 text-center">
    <input
      required
      hidden
      name="isDeleted"
      class="form-check-input"
      id="isDeleted"
      value="<%= ifElseCondition(deleted, 'false', 'true') %>"
    />
    <button type="submit" class="btn btn-sm btn-danger btn-warning-pad">
      <%= ifElseCondition(deleted, 'Allow', 'Delete') %>
    </button>
  </div>
</div>
