<div class="row mb-3">

      <div class="col-md-8 col-lg-4">
        <span >
          <% if (isPublished) { %>
            <span style="color: green;">This record is now live on app</span>
          <% } else { %>
            <span style="color: red;">This record is not live on app</span>
          <% } %>
        </span>
    </div>

  <div class="col-md-4 col-lg-3 text-center">
    <button type="submit" class="btn btn-sm btn-warning-pad <%= ifElseCondition(isPublished, "btn-danger", "btn-success") %>">
      <%= ifElseCondition(isPublished, "Hide", "Publish") %>
    </button>
  </div>
  <input hidden required name="isPublished" class="form-check-input"
    id="isPublished" value="<%= ifElseCondition(isPublished, "false", "true") %>" />
</div>
